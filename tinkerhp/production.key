parameters ./params/amoebaboi18.prm

archive
printout 2000
#verbose

integrator nose-hoover
#nose-hoover for npt
#respa for nvt, 2.0 fs timestep
a-axis  41.08981256093847
vdw-cutoff  10.0
vdw-correction

ewald
ewald-alpha  0.386 # 1e-8 * cutoff > hi_val * erfc(alpha * cutoff)
ewald-cutoff  10.0

neighborlist
nlupdate  20 # 20 is default, <= 5 for equilibration

pme-grid  36 36 36
pme-order  5 # is the default
pme-procs 24 # 0.25*ncpus is recommended

polar-eps 0.00001
polar-alg 2 # didn't notice a difference in timings between 1: conj grad and 2: diis
polar-predict # uses aspc for extrapolation, important

save-velocity
mdstat # save stats and error bars
mdrest # remove com motion

